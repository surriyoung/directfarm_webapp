<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.directfarm.app">

    <!-- ðŸ“Œ Query visibility (Android 11+) -->
    <queries>
        <!-- ì¹´ì¹´ì˜¤ ìŠ¤í‚´ -->
        <intent>
            <action android:name="android.intent.action.VIEW" />
            <data android:scheme="kakaotalk" />
